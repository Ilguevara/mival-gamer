                                <image>
                                    <Image url="@../RecursosGlobales/imagenes segun interfaces/juegos/CUPHEAD.png" />
                                </image>
                            </ImageView>
                        </StackPane>
                        <Label styleClass="game-title" text="Cuphead" />
