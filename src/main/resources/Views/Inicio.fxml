                        </HBox>
                    </VBox>

                    <VBox fx:id="gameCard38" onMouseClicked="#handleGameCardClick" styleClass="game-card" GridPane.columnIndex="5" GridPane.rowIndex="0">
                        <StackPane>
                            <ImageView fitHeight="180" fitWidth="180" preserveRatio="false">
                                <image>
                                    <Image url="@../RecursosGlobales/imagenes segun interfaces/juegos/UNTILDAWN.png" />
                                </image>
                            </ImageView>
                        </StackPane>
                        <Label styleClass="game-title" text="Until Dawn" />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Button mnemonicParsing="false" onAction="#handleAddToCartButton" opacity="0.63" styleClass="add-button" text="+" textFill="#636363" />
                            <Label styleClass="game-price" text="219000.00 COP" />
                        </HBox>
                    </VBox>

                    <!-- Row 2 -->
                    <VBox fx:id="gameCard21" onMouseClicked="#handleGameCardClick" styleClass="game-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <StackPane>
                            <ImageView fitHeight="180" fitWidth="180" preserveRatio="false">
                                <image>
                                    <Image url="@../RecursosGlobales/imagenes segun interfaces/juegos/ORI.png" />
                                </image>
                            </ImageView>
                        </StackPane>
                        <Label styleClass="game-title" text="Ori And The Blind Forest" />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Button mnemonicParsing="false" onAction="#handleAddToCartButton" opacity="0.63" styleClass="add-button" text="+" textFill="#636363" />
                            <Label styleClass="game-price" text="42000.00 COP" />
                        </HBox>
                    </VBox>

                    <VBox fx:id="gameCard33" onMouseClicked="#handleGameCardClick" styleClass="game-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <StackPane>
                            <ImageView fitHeight="180" fitWidth="180" preserveRatio="false">
                                <image>
                                    <Image url="@../RecursosGlobales/imagenes segun interfaces/juegos/ODYSSEY.png" />
                                </image>
                            </ImageView>
                        </StackPane>
                        <Label styleClass="game-title" text="Super Mario Odyssey" />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Button mnemonicParsing="false" onAction="#handleAddToCartButton" opacity="0.63" styleClass="add-button" text="+" textFill="#636363" />
                            <Label styleClass="game-price" text="279000.00 COP" />
                        </HBox>
                    </VBox>

                    <VBox fx:id="gameCard28" onMouseClicked="#handleGameCardClick" styleClass="game-card" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <StackPane>
                            <ImageView fitHeight="180" fitWidth="180" preserveRatio="false">
                                <image>
                                    <Image url="@../RecursosGlobales/imagenes segun interfaces/juegos/SPIDER.png" />
                                </image>
                            </ImageView>
                        </StackPane>
                        <Label styleClass="game-title" text="Spider Man 2" />
