                            <HBox styleClass="pagination" />
                        </VBox>
                    </HBox>

                    <ImageView preserveRatio="true" styleClass="featured-image">

                    </ImageView>
                </StackPane>

                <!-- Games Grid -->
                <GridPane hgap="20" styleClass="games-grid" vgap="20">
